# Production Environment Variables Template
# 호스팅 플랫폼(Render/Vercel)에 설정할 환경변수들

# Environment Configuration (운영용으로 변경)
ENVIRONMENT=production

# Database Configuration (실제 운영 DB 연결 문자열로 변경 필요)
MONGODB_URL=실제운영DB연결문자열
DATABASE_NAME=XAI_Community

# Collection Configuration (개발과 동일)
USERS_COLLECTION=users
POSTS_COLLECTION=posts
COMMENTS_COLLECTION=comments
POST_STATS_COLLECTION=post_stats
USER_REACTIONS_COLLECTION=user_reactions
FILES_COLLECTION=files
STATS_COLLECTION=stats

# API Configuration (개발과 동일)
API_TITLE=Xai Community API
API_VERSION=1.0.0
API_DESCRIPTION=API for Xai Community

# JWT Configuration (SECRET_KEY는 실제 운영용 키로 변경 필요)
SECRET_KEY=실제운영보안키32자이상으로변경필요
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (실제 Vercel 도메인으로 변경 필요)
ALLOWED_ORIGINS=https://실제vercel도메인.vercel.app
FRONTEND_URL=https://실제vercel도메인.vercel.app

# Server Configuration (개발과 동일)
PORT=8000
HOST=0.0.0.0